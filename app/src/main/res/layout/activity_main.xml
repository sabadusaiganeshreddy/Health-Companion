<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="HEALTH COMPANION"
    android:textAlignment="center"
    android:layout_marginTop="100dp"
    android:textSize="25sp"
    style="@style/TextAppearance.Material3.BodyLarge"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    />

    <Button
        android:id="@+id/btn_symptom_predictor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disease Predictor"
        android:layout_marginTop="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <Button
        android:id="@+id/btn_bmi_calculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMI Calculator"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_symptom_predictor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
<Button
    android:id="@+id/btn_food_library"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Food Library"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@id/btn_bmi_calculator"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>